	ForwardX11 no

# Basiton hosts:
#   Host infra-bastion01.general.disney.private
#   Host infra-bastion01.compliant.disney.private
#   Host infra-bastion-win01.general.disney.private
#   Host infra-bastion-win01.compliant.disney.private

# Use the bastions as proxies for the production hosts
Host	n7?g??*
	ProxyCommand ssh infra-bastion01.general.disney.private nc %h %p
	ForwardAgent yes
	ForwardX11 yes
	Protocol 2,1
	Compression yes
Host	n7?c??*
	ProxyCommand ssh infra-bastion01.compliant.disney.private nc %h %p
	ForwardAgent yes
	ForwardX11 yes
	Protocol 2,1
	Compression yes

Host    morpheus-forward
	Hostname morpheus.lapseofthought.com
	User drich
	Compression yes
	ForwardAgent yes
	ForwardX11 yes
	# SMTP
	LocalForward 4025 mail.lapseofthought.com:25
	# IRC znc
	LocalForward 4667 localhost:6667
	# IMAPS
	LocalForward 4993 imap.lapseofthought.com:993
	# VNC
	LocalForward 5902 sandman.lapseofthought.com:5900
	LocalForward 5903 localhost:5900
	LocalForward 5904 dream.lapseofthought.com:5900
	LocalForward 5905 kodi:5900
	# Jabber
	LocalForward 5922 localhost:5222
	# SlimServ
	LocalForward 5099 slimp3.lapseofthought.com:9000
	# Prosody
	LocalForward 5280 localhost:5280
	LocalForward 5281 localhost:5281
	# pfsense
	LocalForward 8443 fw01.lapseofthought.com:443
	LocalForward 8444 fw02.lapseofthought.com:443
	# Sonic modem
	LocalForward 8481 172.16.42.4:81

Host	*.lapseofthought.com
	User drich
	IdentityFile ~/.ssh/id_dsa
	ForwardAgent yes
	ForwardX11 yes
	Protocol 2,1
	ServerAliveInterval 1800
	Compression yes

Host www.sunnyvaleplayers.org
	Hostname fomalhaut.dreamhost.com
	User wwwscp
	ForwardAgent no
	ForwardX11 no
	IdentityFile ~/.ssh/identity-scp
	IdentityFile2 ~/.ssh/id_dsa-scp

Host	*.employees.org
	User drich
	IdentityFile ~/.ssh/id_dsa
	ForwardAgent yes
	ForwardX11 yes
	Protocol 2,1
	ServerAliveInterval 1800
	Compression yes

# Defaults for all hosts
Host    *
	IdentityFile ~/.ssh/id_dsa
	ProxyCommand none
	ForwardAgent yes
	ForwardX11 yes
	Protocol 2,1
	ServerAliveInterval 1800
	Compression yes
